
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet"
          href="../../../Content/table.css" type="text/css">
    <link rel="stylesheet"
          href="../../../Content/cwcalendar.css"
          type="text/css">
    <script type="text/javascript"
            src="../../../javascript/comm/comm.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/comm/list.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/calendar-ch.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/jquery-1.7.2.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/locate.js">

    </script>
    <script type="text/javascript"
            src="../../../javascript/select.js">

    </script>
    <script src="~/Scripts/vue.js"></script>
    <script type="text/javascript">
        var currentPage = 1;
        var pages = 1;
        var vm;
        $(function () {
            fill();
        })
        $(function () {
            $(document).on("click", "#first", function () {
                currentPage = 1;
                vm.load();
            })
            $(document).on("click", "#prev", function () {
                if (currentPage > 1) {
                    currentPage--;
                    vm.load();
                }
            })
            $(document).on("click", "#next", function () {
                if (currentPage < vm.pages) {
                    currentPage++;
                    vm.load();
                }

            })
            $(document).on("click", "#last", function () {
                currentPage = vm.pages;
                vm.load();
            })
            $(document).on("click", "#go", function () {
                currentPage = $("#cpage").val();
                vm.load();
            })
        })
        function geshihua(sj) {
            var data = new Date(Date.parse(sj));
            var time = data.getFullYear() + ":" + (data.getMonth() + 1) + ":" + data.getDate() + ":" + data.getHours() + ":" + data.getMinutes() + ":" + data.getSeconds();
            return time;
        }
        function fill() {
            vm = new Vue({
                el: "#body",
                data: {
                    nums: null,
                    rows: null,
                    pages: null,
                    current:null
                },
                methods: {
                    load: function () {
                        var t = this;
                        $.ajax({
                            type: "post",
                            url: "/recruit/register_list",
                            data: "currentPage=" + currentPage,
                            success: function (msg) {
                                var data = eval("("+msg+")");
                                t.nums = data["list"];
                                t.rows = data["rows"];
                                t.pages = data["pages"];
                                t.current = currentPage;
                                for (var i = 0; i < t.nums.length; i++) {

                                    t.nums[i]["regist_time"] = geshihua(t.nums[i]["registe_time"]);
                                }
                            }
                        })
                    }
                }

            })
            vm.load();
        }
    </script>

</head>

<body>
    <div id="body">
        <form action="/HR_Fist/recruit/recruitAction!toRegisterList" name="fm">
            <input type="hidden" name="utilBean.currPage" id="page" />
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">您正在做的业务是：人力资源--招聘管理--录用管理--录用申请  </font>
                    </td>
                </tr>

            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr class="TR_STYLE1">
                    <td class="TD_STYLE1">
                        姓名
                    </td>
                    <td class="TD_STYLE1">
                        性别
                    </td>
                    <td class="TD_STYLE1">
                        年龄
                    </td>
                    <td class="TD_STYLE1">
                        职位类别
                    </td>
                    <td class="TD_STYLE1">
                        职位名称
                    </td>
                    <td class="TD_STYLE1">
                        毕业院校
                    </td>
                    <td class="TD_STYLE1">
                        学历专业
                    </td>
                    <td class="TD_STYLE1">
                        申请
                    </td>
                </tr>


                <tr class="TR_STYLE1" v-for="(item,i) in nums">
                    <td class="TD_STYLE2">
                        {{item.human_name}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_sex}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_age}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_major_name}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_major_name}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_college}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_specility}}
                    </td>
                    <td class="TD_STYLE2">
                        <a :href="['/recruit/employ_register/'+item.res_id]" target="mainFrame">申请</a>
                    </td>
                </tr>



            </table>
            <p>
                &nbsp;&nbsp;总数：{{rows}} 例 &nbsp;&nbsp;&nbsp;当前第{{current}} 页 /每页显示 5 条 &nbsp;&nbsp;&nbsp;共 {{pages}} 页 &nbsp;&nbsp;&nbsp;
                <a id="prev" href="javascript:up('0')">上一页</a> &nbsp;&nbsp;&nbsp;
                <a id="next" href="javascript:down('2','1')">下一页</a> &nbsp;&nbsp;&nbsp;跳到第 <input name=page type=text class=input1 id="cpage" size=1> 页&nbsp;&nbsp;<input id="go" type="image" src="../../../images/go.bmp" onclick="tj('1')" width=18 height=18 border=0>
        </form>
    </div>
</body>
</html>
