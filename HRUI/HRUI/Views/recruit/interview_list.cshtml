@model IEnumerable<HRModel.M_engage_resume>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>My JSP 'resume-list.jsp' starting page</title>
    <link rel="stylesheet"
          href="../../../Content/table.css" type="text/css">
    <link rel="stylesheet"
          href="../../../Content/cwcalendar.css" type="text/css">
    <script type="text/javascript"
            src="../../../javascript/comm/comm.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/comm/list.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/calendar-ch.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/jquery-1.7.2.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/locate.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/select.js">
    </script>
    <script src="~/Scripts/vue.js"></script>
    <script type="text/javascript">
        var currentPage = 1;
        var pages = 1;
        var vm;
        $(function () {
            fill();
        })
        $(function () {
            $(document).on("click", "#first", function () {
                currentPage = 1;
                vm.load();
            })
            $(document).on("click", "#prev", function () {
                if (currentPage > 1) {
                    currentPage--;
                    vm.load();
                }
            })
            $(document).on("click", "#next", function () {
                if (currentPage < vm.pages) {
                    currentPage++;
                    vm.load();
                }

            })
            $(document).on("click", "#last", function () {
                currentPage = vm.pages;
                vm.load();
            })
            $(document).on("click", "#go", function () {
                currentPage = $("#cpage").val();
                vm.load();
            })
        })
        function fill() {
            vm = new Vue({
                el: "#body",
                data: {
                    nums: null,
                    rows: null,
                    pages: null,
                    current:null
                },
                methods: {
                    load: function () {
                        var t = this;
                        $.ajax({
                            type: "post",
                            url: "/recruit/interview_list",
                            data: "currentPage=" + currentPage,
                            success: function (msg) {
                                var data = eval("("+msg+")");
                                t.nums = data["list"];
                                t.rows = data["rows"];
                                t.pages = data["pages"];
                                t.current = currentPage;
                            }
                        })
                    }
                }

            })
            vm.load();
        }
    </script>
</head>
<body>
    <div id="body">
        <form method="post" name="fm" action="">
            <input type="hidden" name="utilBean.currPage" id="page" />
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--招聘管理--面试管理--面试结果登记--有效简历列表
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="button" value="返回" class="BUTTON_STYLE1" onclick="history.back();">
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="15%" class="TD_STYLE1">
                        档案编号
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        姓名
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        性别
                    </td>
                    <td width="15%" class="TD_STYLE1">
                        职位分类
                    </td>
                    <td width="5%" class="TD_STYLE1">
                        职位名称
                    </td>
                    <td width="5%" class="TD_STYLE1">
                        电话号码
                    </td>
                    <td width="10%" class="TD_STYLE1">
                        面试状态
                    </td>
                    <td width="15%" class="TD_STYLE1">
                        登记
                    </td>

                </tr>




                <tr v-for="(item,i) in nums">
                    <td class="TD_STYLE2">
                        {{item.res_id}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_name}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_sex}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_major_kind_name}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_major_name}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.human_telephone}}
                    </td>
                    <td class="TD_STYLE2">
                        <span v-if="item.interview_status=='0'">待面试</span>
                        <span v-if="item.interview_status=='1'">通过</span>
                    </td>
                    <td class="TD_STYLE2">
                        <a :href="['/recruit/interview_register/'+item.res_id]">登记</a>
                    </td>
                </tr>


            </table>
            <p>
                &nbsp;&nbsp;总数：{{rows}} 例 &nbsp;&nbsp;&nbsp;当前第{{current}} 页 /每页显示 5 条 &nbsp;&nbsp;&nbsp;共 {{pages}} 页 &nbsp;&nbsp;&nbsp;
                <a id="prev" href="javascript:up('0')">上一页</a> &nbsp;&nbsp;&nbsp;
                <a id="next" href="javascript:down('2','1')">下一页</a> &nbsp;&nbsp;&nbsp;跳到第 <input name=page type=text class=input1 id="cpage" size=1> 页&nbsp;&nbsp;<input id="go" type="image" src="../../../images/go.bmp" onclick="tj('1')" width=18 height=18 border=0>
        </form>
    </div>
</body>
</html>
