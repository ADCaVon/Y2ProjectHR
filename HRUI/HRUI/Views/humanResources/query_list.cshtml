
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>query_list</title>
    <link rel="stylesheet"
          href="../../Content/table.css" type="text/css">
    <script src="../../javascript/jquery-1.7.2.js"></script>
    <script src="~/Scripts/vue.js"></script>

</head>
<body>
    <div id="ajj">

        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--人力资源档案管理--人力资源档案查询 </font>
                </td>
            </tr>
            <tr>
                <td>
                    符合条件的人力资源档案总数：{{rows}} 例
                </td>
            </tr>
        </table>
        <table width="100%" border="1" id="ajaxdiv" cellpadding=5 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr class="TR_STYLE1">
                <td width="16%" class="TD_STYLE1">
                    档案编号
                </td>
                <td width="13%" class="TD_STYLE1">
                    姓名
                </td>
                <td width="8%" class="TD_STYLE1">
                    性别
                </td>
                <td width="14%" class="TD_STYLE1">
                    I级机构
                </td>
                <td width="14%" class="TD_STYLE1">
                    II级机构
                </td>
                <td width="14%" class="TD_STYLE1">
                    III级机构
                </td>
                <td width="14%" class="TD_STYLE1">
                    职位分类
                </td>
                <td width="7%" class="TD_STYLE1">
                    职位名称
                </td>
            </tr>

            <tr v-for="(item,index) in nums">
                <td class="TD_STYLE2">
                   
                    <a :href="['../humanResources/query_list_information/'+item.human_id]">{{item.human_id}}</a>
                </td>
                <td class="TD_STYLE2">
                    {{item.human_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.human_sex}}
                </td>
                <td class="TD_STYLE2">
                    {{item.first_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.second_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.third_kind_name}}
                </td>
                <td class="TD_STYLE2">

                    {{item.human_major_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.human_major_name}}
                </td>
            </tr>
            }
        </table>
        <p>
            &nbsp;&nbsp;总数：{{rows}} 例 &nbsp;&nbsp;&nbsp;当前第{{current}} 页 /每页显示 5 条 &nbsp;&nbsp;&nbsp;共 {{pages}} 页 &nbsp;&nbsp;&nbsp;
            <a id="prev" href="javascript:up('0')">上一页</a> &nbsp;&nbsp;&nbsp;
            <a id="next" href="javascript:down('2','1')">下一页</a> &nbsp;&nbsp;&nbsp;跳到第 <input name=page type=text class=input1 id="cpage" size=1> 页&nbsp;&nbsp;<input id="go" type="image" src="../../../images/go.bmp" onclick="tj('1')" width=18 height=18 border=0>


    </div>
</body>
</html>
<script type="text/javascript">
        var currentPage = 1;
        var pages = 1;
        var vm;
        $(function () {
            fill();
        })
        $(function () {
            $(document).on("click", "#first", function () {
                currentPage = 1;
                vm.load();
            })
            $(document).on("click", "#prev", function () {
                if (currentPage > 1) {
                    currentPage--;
                    vm.load();
                }
            })
            $(document).on("click", "#next", function () {
                if (currentPage < vm.pages) {
                    currentPage++;
                    vm.load();
                }

            })
            $(document).on("click", "#last", function () {
                currentPage = vm.pages;
                vm.load();
            })
            $(document).on("click", "#go", function () {
                currentPage = $("#cpage").val();
                vm.load();
            })
        })
        function geshihua(sj) {
            var data = new Date(Date.parse(sj));
            var time = data.getFullYear() + ":" + (data.getMonth() + 1) + ":" + data.getDate() + ":" + data.getHours() + ":" + data.getMinutes() + ":" + data.getSeconds();
            return time;
        }
        function fill() {
            vm = new Vue({
                el: "#ajj",
                data: {
                    nums: null,
                    rows: null,
                    pages: null,
                    current:null
                },
                methods: {
                    load: function () {
                        var t = this;
                        $.ajax({
                            type: "post",
                            url: "/humanResources/query_list",
                            data: "currentPage=" + currentPage,
                            success: function (msg) {
                                var data = eval("("+msg+")");
                                t.nums = data["list"];
                                t.rows = data["rows"];
                                t.pages = data["pages"];
                                t.current = currentPage;
                            }
                        })
                    }
                }

            })
            vm.load();
        }
</script>
