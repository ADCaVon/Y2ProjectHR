@model HRModel.M_human_file
@using System.Data;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>human_check</title>
    <link rel="stylesheet"
          href="../../Content/table.css" type="text/css">
    <link rel="stylesheet"
          href="../../Content/cwcalendar.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script language="javascript"
            src="../../javascript/winopen/winopenm.js">
    </script>
    <script type="text/javascript"
            src="../../javascript/calendar-ch.js">
    </script>
    <script type="text/javascript"
            src="~/javascript/jquery-1.7.2.js">
    </script>
    <script type="text/javascript"
            src="../../javascript/jquery.messager.js">
    </script>
    <script src="../../javascript/time.js"></script>
    <script type="text/javascript"
            src="../../javascript/human_check.js">
    </script>
    <script type="text/javascript"
            src="../../javascript/human_input_check.js">
    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        function Ts(obj) {
            //根据返回成功的值做后续操作
            if (obj == "ok") {
                alert("更改成功");
                window.location.href = "/humanResources/register_choose_picture/" + $("#human_id").val();

            }
        }
    </script>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Ajax.BeginForm("change_list_information", new AjaxOptions() { HttpMethod = "Post", OnSuccess = "Ts" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">您正在做的业务是：人力资源--人力资源档案管理--人力资源档案更改 </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="submit" value="确认变更" class="btn btn-default" />
                        <input type="reset" value="清除" class="BUTTON_STYLE1">
                        <input type="button" value="返回" class="BUTTON_STYLE1"
                               onclick="history.back()">
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=3 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>

                    <td class="TD_STYLE1" width="11%">
                        档案编号
                    </td>
                    @Html.HiddenFor(model => model.huf_id)
                    <td colspan="6" class="TD_STYLE2">
                        @Html.LabelFor(model => model.human_id, Model.human_id, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.human_id)
                        @Html.HiddenFor(model => model.regist_time)
                        <input type="hidden" name="humanFile.firstKindName" />
                    </td>
                    <td rowspan="6" width="13%" style="text-align: center;">
                        <img src="../../Uploader/@(Model.human_picture).jpg" style="width:120px;height:150px;" />
                    </td>
                <tr>
                    <td class="TD_STYLE1" width="11%">
                        I级机构
                    </td>
                    <td width="14%" class="TD_STYLE2">
                        @Html.LabelFor(model => model.first_kind_id, Model.first_kind_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.first_kind_id)
                        <input type="hidden" name="humanFile.firstKindName" />
                    </td>
                    <td width="11%" class="TD_STYLE1">
                        II级机构
                    </td>
                    <td width="14%" class="TD_STYLE2">
                        @Html.LabelFor(model => model.second_kind_id, Model.second_kind_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.second_kind_id)
                        <input type="hidden" name="humanFile.secondKindName" />
                    </td>
                    <td width="11%" class="TD_STYLE1">
                        III级机构
                    </td>
                    <td class="TD_STYLE2" colspan="2">
                        @Html.LabelFor(model => model.third_kind_id, Model.third_kind_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.third_kind_id)
                        <input type="hidden" name="humanFile.thirdKindName" />
                    </td>
                    <td rowspan="5" style="text-align: center;"></td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        职位分类
                    </td>
                    <td class="TD_STYLE2">
                        @Html.LabelFor(model => model.human_major_kind_id, Model.human_major_kind_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.human_major_kind_id)
                        <input type="hidden" name="humanFile.humanMajorKindName" />
                    </td>
                    <td class="TD_STYLE1">
                        职位名称
                    </td>
                    <td class="TD_STYLE2">
                        @Html.LabelFor(model => model.human_major_id, Model.human_major_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.HiddenFor(model => model.human_major_id)
                        <input type="hidden" name="humanFile.hunmaMajorName" />
                    </td>
                    <td class="TD_STYLE1">
                        职称
                    </td>
                    <td colspan="2" class="TD_STYLE2">
                        @Html.DropDownListFor(model => model.human_pro_designation, ViewBag.zclist as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_pro_designation, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        姓名
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_name, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        性别
                    </td>
                    <td class="TD_STYLE2">
                        @Html.DropDownListFor(model => model.human_sex, ViewBag.sexlist as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_sex, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        EMAIL
                    </td>
                    <td colspan="2" class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_email, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        电话
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_telephone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_telephone, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        QQ
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_qq, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_qq, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        手机
                    </td>
                    <td colspan="2" class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_mobilephone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_mobilephone, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        住址
                    </td>
                    <td colspan="3" class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_address, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        邮编
                    </td>
                    <td colspan="2" class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_postcode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_postcode, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        国籍
                    </td>
                    <td class="TD_STYLE2">
                        @Html.DropDownListFor(model => model.human_nationality, ViewBag.gjlist as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_nationality, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        出生地
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_birthplace, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_birthplace, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        生日
                    </td>
                    <td width="13%" class="TD_STYLE2">
                        @Html.TextBoxFor(model => model.human_birthday, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_birthday, "", new { @class = "text-danger" })
                    </td>
                    <td width="11%" class="TD_STYLE1">
                        民族
                    </td>
                    <td class="TD_STYLE2" width="14%">
                        @Html.DropDownListFor(model => model.human_race, ViewBag.mzlist as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_race, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        宗教信仰
                    </td>
                    <td class="TD_STYLE2">
                        @Html.DropDownListFor(model => model.human_religion, ViewBag.zjlist as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_religion, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        政治面貌
                    </td>
                    <td class="TD_STYLE2">
                        @Html.DropDownListFor(model => model.human_party, ViewBag.zzlist as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_party, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        身份证号码
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_id_card, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_id_card, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        社会保障号码
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_society_security_id, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_society_security_id, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        年龄
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_age, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_age, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        学历
                    </td>
                    <td class="TD_STYLE2">
                        @Html.DropDownListFor(model => model.human_educated_degree, ViewBag.xllist as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_educated_degree, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        教育年限
                    </td>
                    <td class="TD_STYLE2">
                        @Html.DropDownListFor(model => model.human_educated_years, ViewBag.jymlist as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_educated_years, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        学历专业
                    </td>
                    <td class="TD_STYLE2">
                        @Html.DropDownListFor(model => model.human_educated_major, ViewBag.zylist as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_educated_major, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        薪酬标准
                    </td>
                    <td class="TD_STYLE2">
                        @*<select name="salary_standard_id">
                                @foreach (DataRow item in (ViewBag.xingchou).Rows)
                                {
                                    if (Model.salary_standard_id.Equals(item["standard_id"]))
                                    {
                                        <option selected="selected" value='@item["standard_id"]'>@item["standard_name"]</option>
                                    }
                                    else
                                    {
                                        <option value='@item["standard_id"]'>@item["standard_name"]</option>
                                    }
                                }
                            </select>*@
                    </td>
                    <td class="TD_STYLE1">
                        开户行
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_bank, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_bank, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        帐号
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_account, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_account, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        复核人
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.checker, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.checker, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        变更时间
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.change_time, new { htmlAttributes = new { @class = "INPUT_STYLE2", @name = "humanFile.registTime", @id = "create_time" } })
                        @Html.ValidationMessageFor(model => model.change_time, "", new { @class = "INPUT_STYLE2", @id = "create_time", @name = "humanFile.registTime" })
                        @Html.HiddenFor(model=>model.regist_time);
                    </td>
                    <td class="TD_STYLE1">
                        特长
                    </td>
                    <td class="TD_STYLE2">
                        @Html.DropDownListFor(model => model.human_speciality, ViewBag.tclist as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_speciality, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        爱好
                    </td>
                    <td class="TD_STYLE2">
                        @Html.DropDownListFor(model => model.human_hobby, ViewBag.ahlist as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.human_hobby, "", new { @class = "text-danger" })
                    </td>
                    <td class="TD_STYLE1">
                        &nbsp;
                    </td>
                    <td class="TD_STYLE2">
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        个人履历
                    </td>
                    <td colspan="7" class="TD_STYLE2">
                        @Html.TextAreaFor(model => model.human_histroy_records, new { htmlAttributes = new { @class = "TEXTAREA_STYLE1" } })
                        @Html.ValidationMessageFor(model => model.human_histroy_records, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        家庭关系信息
                    </td>
                    <td colspan="7" class="TD_STYLE2">
                        @Html.TextAreaFor(model => model.human_family_membership, new { htmlAttributes = new { @class = "TEXTAREA_STYLE1" } })
                        @Html.ValidationMessageFor(model => model.human_family_membership, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        备注
                    </td>
                    <td colspan="7" class="TD_STYLE2">
                        @Html.TextAreaFor(model => model.remark, new { htmlAttributes = new { @class = "TEXTAREA_STYLE1" } })
                        @Html.ValidationMessageFor(model => model.remark, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
        </div>
    }
    <script type="text/javascript">
        $("select").attr({
            "class": "SELECT_STYLE1"
        })
        $("input[type=text]").attr({
            "class": "INPUT_STYLE2"
        })
        $("textarea").attr({
            "class": "TEXTAREA_STYLE1",
            "rows": "4"
        })
    </script>
</body>
</html>
